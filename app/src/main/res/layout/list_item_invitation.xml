<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/invitation_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/invitation_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackSteel"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:layout_marginEnd="8dp"
                    android:text="Menambahkan anda sebagai karyawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/invitation_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_placeholder"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/invitation_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda telah ditambahkan oleh Prieyudha Akadita S sebagai kasir di Toko Abadi Jaya II" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>