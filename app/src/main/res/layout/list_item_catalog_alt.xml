<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeWidth="1dp"
    android:elevation="2dp"
    app:cardCornerRadius="6dp"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/padding_size_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/catalog_image"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/image_size_64"
            android:layout_height="@dimen/image_size_64"/>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_size_16"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="2"
                android:id="@+id/catalog_name"
                android:textStyle="bold"
                android:text="@string/lorem_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/catalog_store_name"
                android:text="@string/lorem"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_size_8"
                android:layout_marginBottom="@dimen/margin_size_8"
                android:id="@+id/catalog_store_discount_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/catalog_store_actual_price"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/colorRed"
                    android:id="@+id/catalog_store_discount"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:id="@+id/catalog_price"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/lorem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>